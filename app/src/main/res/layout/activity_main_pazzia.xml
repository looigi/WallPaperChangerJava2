<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/layPennetta"
                    android:layout_width="0dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_molto_trasp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgPennetta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_molto_trasp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgImmagini"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_molto_trasp"
                android:layout_weight="1"
                android:layout_height="0dp">

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                android:layout_marginBottom="40dp"
                android:id="@+id/imgCaricamentoPEN"
                android:src="@drawable/loading"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                android:layout_marginBottom="40dp"
                android:id="@+id/imgCaricamentoIMM"
                android:src="@drawable/loading"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgCaricamentoVID"
            android:src="@drawable/loading"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>