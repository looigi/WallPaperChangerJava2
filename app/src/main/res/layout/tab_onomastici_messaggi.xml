<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >			
		
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
		 android:weightSum="6"
         android:gravity="center_horizontal|center_vertical"
	     android:orientation="vertical" >

		 <LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="0dp"
			 android:padding="2dp"
			 android:layout_weight="1">

			 <LinearLayout
				 android:layout_width="match_parent"
				 android:weightSum="8"
				 android:orientation="horizontal"
				 android:layout_height="match_parent">

				 <EditText
					 android:id="@+id/edtMessaggio"
					 android:layout_width="0dp"
					 android:textColor="@color/Blue"
					 android:layout_weight="7"
					 android:layout_height="match_parent" />

				 <LinearLayout
					 android:layout_width="0dp"
					 android:layout_weight="1"
					 android:gravity="center_vertical|center_horizontal"
					 android:layout_height="match_parent">

					 <ImageView
						 android:id="@+id/imgCondividiMessaggio"
						 android:layout_width="40dp"
						 android:layout_height="40dp"
						 android:src="@drawable/share">

					 </ImageView>
				 </LinearLayout>
			 </LinearLayout>
		 </LinearLayout>

		 <LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="0dp"
			 android:orientation="vertical"
			 android:layout_weight="2">

			 <TextView
				 android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
				 android:layout_width="match_parent"
				 android:text="Nominativi"
				 android:gravity="center_horizontal"
				 android:layout_height="wrap_content">

			 </TextView>

			 <ListView
				 android:id="@+id/lstNomi"
				 android:layout_width="match_parent"
				 android:layout_height="match_parent">

			 </ListView>
		 </LinearLayout>

		 <LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="0dp"
			 android:orientation="vertical"
			 android:layout_weight="3">

			 <TextView
				 android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
				 android:layout_width="match_parent"
				 android:text="Messaggi"
				 android:gravity="center_horizontal"
				 android:layout_height="wrap_content">

			 </TextView>

			 <ListView
				 android:id="@+id/lstMessaggi"
				 android:layout_width="match_parent"
				 android:layout_height="match_parent">

			 </ListView>
		 </LinearLayout>
	 </LinearLayout>

</RelativeLayout>