<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp">

    <ImageView
        android:id="@+id/imgCopertina"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtTitoloNotificaSfondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtTitoloNotifica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#00AA00"
        android:textStyle="bold"
        android:textSize="16sp" />

    <RelativeLayout
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="37dp">

        <TextView
            android:id="@+id/txtDettaglio"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="8dp"
            android:text="Wallpaper Changer"
            android:textColor="#AA0000" />

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="2dp"
            android:id="@+id/imgMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/map" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgSwitchGPS"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/satellite" />

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:paddingEnd="2dp"
        android:id="@+id/imgProssima"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/eye" />

</RelativeLayout>