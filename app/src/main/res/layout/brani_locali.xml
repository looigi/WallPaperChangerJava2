<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layBraniLocali"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:weightSum="11"
                android:gravity="center_vertical|right">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:text="Ricerca"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edtFiltro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:inputType="text"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgRicercaSceltaPL"
                        android:src="@drawable/icona_cerca"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/txtQuanteRicercaPL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textColor="#aa0000"
                    android:textSize="12dp">

                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgRefreshBraniDB"
                        android:src="@drawable/icona_refresh"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lstBrani"
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:dividerHeight="1dp"
            android:layout_height="0dp" >
        </ListView>
    </LinearLayout>
</LinearLayout>