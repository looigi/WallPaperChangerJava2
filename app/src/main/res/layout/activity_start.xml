<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/layStart"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgStartWallpaper"
                    android:layout_width="50dp"
                    android:src="@drawable/eye"
                    android:layout_height="50dp">

                </ImageView>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="Wallpaper"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgStartDetector"
                    android:layout_width="50dp"
                    android:src="@drawable/icona_cerca"
                    android:layout_height="50dp">

                </ImageView>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/txtStartLabelDet"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="Detector"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgStartMappa"
                    android:layout_width="50dp"
                    android:src="@drawable/map"
                    android:layout_height="50dp">

                </ImageView>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/txtStartLabelMap"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="Mappa"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laySplash"
        android:layout_alignParentTop="true"
        android:background="@drawable/bordato_non_trasparente"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="match_parent">

        <TextView
            android:textSize="37dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WallPaper Changer 2.0">

        </TextView>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/icona_lancio">

        </ImageView>
    </LinearLayout>
</RelativeLayout>