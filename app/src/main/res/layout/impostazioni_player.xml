<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layImpostazioniPlayer"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/bordato_non_trasparente"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/Rosso"
        android:text="Impostazioni PLAYER"
        android:layout_height="wrap_content">

    </TextView>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/layAprePlayer"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:padding="5dp"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="Apre Player"
            android:layout_height="match_parent">

        </TextView>

        <Button
            android:id="@+id/btnAprePlayer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="..."
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layChiudePlayer"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:padding="5dp"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="Chiude Player"
            android:layout_height="match_parent">

        </TextView>

        <Button
            android:id="@+id/btnChiudePlayer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="..."
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laySettingsPlayer"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    </LinearLayout>
</LinearLayout>