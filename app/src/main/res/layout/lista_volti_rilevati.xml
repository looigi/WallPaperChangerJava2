<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgOrigine"
                android:layout_width="250dp"
                android:layout_height="250dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgDestinazione"
                android:layout_width="250dp"
                android:layout_height="250dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bordato_non_trasparente"
        android:layout_height="50dp"
        android:weightSum="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtOrigine"
            android:layout_width="0dp"
            android:gravity="start"
            android:textColor="@color/Nero"
            android:textSize="15dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSposta"
                android:src="@drawable/sposta"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDestinazione"
            android:layout_width="0dp"
            android:textColor="@color/Nero"
            android:textSize="15dp"
            android:layout_weight="2"
            android:gravity="end"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>