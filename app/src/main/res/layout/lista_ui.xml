<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layContenitore"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layLista"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:background="@drawable/bordato_colorato_con_bordo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layContenitoreLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCategoria"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:gravity="end|center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgControlloImmagini"
                        android:src="@drawable/controllo_immagini"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgRefreshImmagini"
                        android:src="@drawable/icona_refresh"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgRaggruppate"
                        android:src="@drawable/immagini_raggruppate"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgRaggruppate2"
                        android:src="@drawable/icona_cerca"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgUploadImmagini"
                        android:src="@drawable/upload"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgRinominaCategoria"
                        android:src="@drawable/rename"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layControllo"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtControllo"
                android:gravity="end"
                android:textColor="@color/Nero"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgApreControllo"
                    android:src="@drawable/play"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layUguale"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtUguale"
                android:gravity="end"
                android:textColor="@color/Nero"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgApreUguale"
                    android:src="@drawable/play"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layFuoriCategoria"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtFuoriCategoria"
                android:gravity="end"
                android:textColor="@color/Nero"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgApreFC"
                    android:src="@drawable/play"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>