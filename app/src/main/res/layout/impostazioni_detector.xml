<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/lay_impostazioni_detector"
    android:padding="8dp"
    android:background="@drawable/bordato_non_trasparente"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/Rosso"
        android:text="Impostazioni DETECTOR"
        android:layout_height="wrap_content">

    </TextView>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <!-- <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sLog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log" /> -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sTriploTastoCuffie"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto su precedente brano (tasto cuffie)" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sVibrazione"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vibrazione" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sToast"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toasts" />

            <View
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:padding="5dp"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:text="Invia file di log"
                    android:layout_height="match_parent">

                </TextView>

                <Button
                    android:id="@+id/btnInviaLogDT"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="..."
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:padding="5dp"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:text="Pulisce file di log"
                    android:layout_height="match_parent">

                </TextView>

                <Button
                    android:id="@+id/btnPulisceLogDT"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="..."
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:padding="5dp"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:text="Visualizza file di log"
                    android:layout_height="match_parent">

                </TextView>

                <Button
                    android:id="@+id/btnVisualizzaLogDT"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="..."
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>