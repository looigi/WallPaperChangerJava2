<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="match_parent"
    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
    android:padding="3dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtAnno"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Blue"
        android:textSize="17dp"
        android:text="Anno" />

    <LinearLayout
        android:layout_below="@+id/txtAnno"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lstSquadre"
            android:divider="#CCCCCC"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <ListView
            android:id="@+id/lstPartite"
            android:layout_marginTop="3dp"
            android:divider="#CCCCCC"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ListView
                android:id="@+id/lstGiocatoriCasa"
                android:layout_marginTop="3dp"
                android:divider="#CCCCCC"
                android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                android:dividerHeight="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ListView
                android:id="@+id/lstGiocatoriFuori"
                android:layout_marginTop="3dp"
                android:divider="#CCCCCC"
                android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                android:dividerHeight="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgCaricamentoAF"
        android:src="@drawable/loading"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </pl.droidsonroids.gif.GifImageView>
</RelativeLayout>
