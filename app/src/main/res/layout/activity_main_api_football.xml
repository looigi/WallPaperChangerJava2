<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="match_parent"
    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
    android:padding="3dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtAnno"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:layout_height="wrap_content"
        android:textColor="@color/Blue"
        android:textSize="17dp"
        android:text="Anno" />

    <LinearLayout
        android:layout_below="@+id/txtAnno"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:gravity="start|center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Verde_Scuro"
                android:textSize="17dp"
                android:text="Salva tutte le squadre " />

            <ImageView
                android:id="@+id/imgSalvaTutteLeSquadre"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icona_salva" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Blue"
                android:textSize="17dp"
                android:text=" Aggiorna Ris. " />

            <ImageView
                android:id="@+id/imgScriveRisultati"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/classifica" />
        </LinearLayout>

        <ListView
            android:id="@+id/lstSquadre"
            android:divider="#CCCCCC"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:gravity="start|center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Verde_Scuro"
                android:textSize="17dp"
                android:text="Salva tutte le partite " />

            <ImageView
                android:id="@+id/imgSalvaTutteLePartite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icona_salva" />

            <TextView
                android:id="@+id/txtAvanzamento"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Blue"
                android:textSize="17dp"
                android:text="" />
        </LinearLayout>

        <ListView
            android:id="@+id/lstPartite"
            android:layout_marginTop="3dp"
            android:divider="#CCCCCC"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:gravity="start|center_vertical"
                    android:layout_weight="2"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Verde_Scuro"
                        android:textSize="17dp"
                        android:text="Salva tutti " />

                    <ImageView
                        android:id="@+id/imgSalvaTuttiIGiocatoriCasa"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icona_salva" />
                </LinearLayout> -->

                <ListView
                    android:id="@+id/lstGiocatoriCasa"
                    android:layout_marginTop="3dp"
                    android:divider="#CCCCCC"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_weight="10"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:gravity="start|center_vertical"
                    android:layout_weight="2"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Verde_Scuro"
                        android:textSize="17dp"
                        android:text="Salva tutti " />

                    <ImageView
                        android:id="@+id/imgSalvaTuttiIGiocatoriFuori"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icona_salva" />
                </LinearLayout> -->

                <ListView
                    android:id="@+id/lstGiocatoriFuori"
                    android:layout_marginTop="3dp"
                    android:divider="#CCCCCC"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_weight="10"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgCaricamentoAF"
        android:src="@drawable/loading"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</RelativeLayout>
