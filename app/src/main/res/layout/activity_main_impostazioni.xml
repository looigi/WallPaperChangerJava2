<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".classiWallpaper.MainWallpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/Verde_Chiaro"
        android:weightSum="15"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_green_dark"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSettingsWallpaper"
                        android:layout_width="wrap_content"
                        android:text="WallPaper"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnSettingsDetector"
                        android:layout_width="wrap_content"
                        android:text="Detector"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnSettingsPlayer"
                        android:layout_width="wrap_content"
                        android:text="Player"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnSettingsMappa"
                        android:layout_width="wrap_content"
                        android:text="Mappa"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnSettingsImmagini"
                        android:layout_width="wrap_content"
                        android:text="Immagini"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnSettingsVideo"
                        android:layout_width="wrap_content"
                        android:text="Video"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnSettingsDebug"
                        android:layout_width="wrap_content"
                        android:text="Debug"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="14"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_height="0dp">

            <include
                android:visibility="gone"
                layout="@layout/impostazioni_wallpaper"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:visibility="gone"
                layout="@layout/impostazioni_detector"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:visibility="gone"
                layout="@layout/impostazioni_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:visibility="gone"
                layout="@layout/impostazioni_mappa"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:visibility="gone"
                layout="@layout/impostazioni_debug"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:visibility="gone"
                layout="@layout/impostazioni_immagini"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:visibility="gone"
                layout="@layout/impostazioni_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>