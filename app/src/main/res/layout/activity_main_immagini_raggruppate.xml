<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:weightSum="11"
        android:padding="2dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp">

            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/optMetodo1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Metodo 1" />

                <RadioButton
                    android:id="@+id/optMetodo2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Metodo 2" />

                <RadioButton
                    android:id="@+id/optMetodo3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Metodo 3" />
            </RadioGroup>
        </LinearLayout>

        <ListView
            android:id="@+id/lstIR"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@drawable/bordato_colorato"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Categoria"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spnCategorie"
                    android:layout_width="0dp"
                    android:theme="@style/spinnerTheme"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgRefreshCategorie"
                        android:src="@drawable/icona_refresh"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/imgSelezionaTutte"
                    android:src="@drawable/sposta"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <ImageView
                    android:id="@+id/imgSpostaTutte"
                    android:src="@drawable/sposta"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/txtQuante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lstImmagini"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />
    </LinearLayout>

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imgRefreshIR"
        android:src="@drawable/icona_refresh"
        android:layout_width="30dp"
        android:layout_height="30dp" />

