<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/contenitore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:orientation="vertical"
        android:background="#000000"
        tools:context=".MainActivity" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTempoAlCambio"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgImpostata"
                        android:layout_width="250dp"
                        android:layout_height="250dp">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtQuanteImmagini"
                        android:textColor="@color/colorAccent"
                        android:gravity="center_horizontal"
                        android:layout_weight="4"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgRicerca"
                            android:src="@drawable/icona_cerca"
                            android:layout_width="25dp"
                            android:layout_height="25dp">

                        </ImageView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="6"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:textColor="@color/colorAccent"
                        android:gravity="center_vertical"
                        android:text="Minuti di attesa"
                        android:layout_height="match_parent">

                    </TextView>

                    <Button
                        android:id="@+id/btnMenoMinuti"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txtMinuti"
                            android:textSize="32dp"
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnPiuMinuti"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="+"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchHome"
                    android:layout_width="match_parent"
                    android:textColor="#0000CC"
                    android:text="Cambia Home"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/switchLock"
                    android:layout_width="match_parent"
                    android:textColor="#0000CC"
                    android:text="Cambia Lock"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/switchOffline"
                        android:layout_width="match_parent"
                        android:textColor="#0000CC"
                        android:text="ModalitÃ  offline"
                        android:layout_height="wrap_content" />

                    <!-- <Switch
                        android:id="@+id/switchResize"
                        android:layout_width="match_parent"
                        android:textColor="#0000CC"
                        android:text="Resize"
                        android:layout_height="wrap_content" /> -->

                    <Switch
                        android:id="@+id/switchBlur"
                        android:layout_width="match_parent"
                        android:textColor="#0000CC"
                        android:text="Sfuma"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/switchScriveTesto"
                        android:layout_width="match_parent"
                        android:textColor="#0000CC"
                        android:text="Scrive info immagine"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="6"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Imposta subito"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgRefresh"
                                android:layout_width="30dp"
                                android:src="@drawable/icona_refresh"
                                android:layout_height="30dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layOffline"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPath"
                        android:layout_width="match_parent"
                        android:layout_weight="5"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimary"
                        android:text="Cartella di origine"
                        android:layout_height="match_parent">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="6"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorAccent"
                            android:text="Cartella di origine"
                            android:layout_height="match_parent">

                        </TextView>

                        <Button
                            android:id="@+id/btnCambiaPath"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="..."
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="6"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:textColor="@color/colorAccent"
                            android:text="Refresh immagini"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgRefreshLocale"
                                android:layout_width="30dp"
                                android:src="@drawable/icona_refresh"
                                android:layout_height="30dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgUscita"
                        android:src="@drawable/shutdown"
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                    </ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="6"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:text="Invia file di log"
                        android:layout_height="match_parent">

                    </TextView>

                    <Button
                        android:id="@+id/btnInviaLog"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="..."
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:text="Pulisce file di log"
                        android:layout_height="match_parent">

                    </TextView>

                    <Button
                        android:id="@+id/btnPulisceLog"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="..."
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout> -->

        <Switch
            android:id="@+id/switchOnOff"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="120dp"
            android:text="On / Off"
            android:textColor="@color/black"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/imgCaricamento"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/icona_salva"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>

        <RelativeLayout
            android:id="@+id/laySceltaImmagine"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="11"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:text="Ricerca"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edtFiltro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:ems="10"
                        android:inputType="text"
                        android:text="" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgRicercaScelta"
                            android:src="@drawable/icona_cerca"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgChiudeScelta"
                            android:src="@drawable/elimina_quadrato"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/lstImmagini"
                    android:layout_width="match_parent"
                    android:layout_weight="9"
                    android:layout_height="0dp"
                    android:dividerHeight="1dp"
                    android:listSelector="#9999EE" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
