<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layRicercaBranoPlayer"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:gravity="center_vertical"
        android:weightSum="6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/Nero"
            android:text="Filtro Brano"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtRicercaBrano"
            android:autofillHints="Testo da ricercare"
            android:layout_width="0dp"
            android:textColor="@color/Blue"
            android:inputType="text"
            android:layout_weight="3"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgRicercaBrano"
                android:src="@drawable/icona_cerca"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <ListView
        android:id="@+id/lstListaBraniRicercati"
        android:layout_width="match_parent"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:layout_margin="3dp"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:listSelector="#9999EE" />
</LinearLayout>