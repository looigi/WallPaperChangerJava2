    <LinearLayout
        android:id="@+id/layVoltiRilevati"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/bordato_non_trasparente"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:weightSum="8"
        android:layout_height="350dp">

        <ListView
            android:id="@+id/lstListaVolti"
            android:layout_below="@+id/laySpinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgChiudeListaVolti"
                    android:layout_width="35dp"
                    android:src="@drawable/elimina_quadrato"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imgPrecedente"
        android:src="@drawable/indietro"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imgProssima"
        android:src="@drawable/avanti"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/layTastiDestra"
        android:padding="3dp"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:orientation="vertical"
        android:layout_marginStart="2dp"
        android:layout_marginTop="132dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layTasti"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="55dp"
        android:layout_height="wrap_content">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layScritteRilevate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            app:alignItems="flex_start"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_marginTop="5dp"
            android:id="@+id/layCategorieRilevate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            app:alignItems="flex_start"/>
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgCaricamentoPreview"
        android:src="@drawable/loading"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</RelativeLayout>