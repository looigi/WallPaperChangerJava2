<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layPreview"
        android:orientation="vertical"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/hrzTasti"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingBottom="5dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Sposta Cat."
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgSpostaACategoria"
                        android:src="@drawable/sposta"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Rileva Volto"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgGestioneVolti"
                        android:src="@drawable/volto"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ricerca"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgRicerca"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icona_cerca" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Genera OCR"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgCreaOCR"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ocr" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Share"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgShareWallpaper"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:src="@drawable/share" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Modifica"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgModifica"
                        android:src="@drawable/edit_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Imposta WP"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgImpostaWallpaper"
                        android:src="@drawable/eye"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Copia su Sfondi"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgCopiaSuSfondi"
                        android:src="@drawable/copia_sfondo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Rinomina"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgRinomina"
                        android:src="@drawable/rename"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Elimina"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgElimina"
                        android:src="@drawable/elimina"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <!-- <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Chiude"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgChiudePreview"
                        android:layout_width="35dp"
                        android:src="@drawable/elimina_quadrato"
                        android:layout_height="35dp" />
                </LinearLayout> -->
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bordato_non_trasparente"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txtDescrizione"
                android:textColor="@color/Verde_Scuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.looigi.wallpaperchanger2.utilities.ImmagineZoomabile
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

