<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgAllarme"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/antifurto" />

    <TextView
        android:id="@+id/txtAllarme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:textSize="35dp"
        android:textColor="@color/Rosso"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtAllarme"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtInfo1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="15dp"
            android:textColor="@color/Nero"
            android:text="" />

        <TextView
            android:id="@+id/txtInfo2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="15dp"
            android:textColor="@color/Nero"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layControlli"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <!--
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sOnOff"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allarme Attivo" />
        -->

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sSuMovimento"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allarme su movimento" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="@color/Nero"
                android:text="GForce Minimo" />

            <EditText
                android:id="@+id/edtGForce"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:textColor="@color/Verde_Scuro"
                android:text="" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgImpostaGForce"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icona_refresh" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sBT"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allarme su BT" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="@color/Nero"
                android:text="Disp. BT monitorato" />

            <EditText
                android:id="@+id/edtBT"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:textColor="@color/Verde_Scuro"
                android:text="" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgImpostaBT"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icona_refresh" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>