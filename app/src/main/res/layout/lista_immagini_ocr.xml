<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textSize="14dp"
        android:textColor="@color/Verde_Scuro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:weightSum="13">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/imgOrigine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:textColor="@color/Nero"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtDestinazione"
            android:layout_margin="3dp"
            android:textColor="@color/Nero"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSpostaACategoria"
                android:src="@drawable/sposta2"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSposta"
                android:src="@drawable/sposta"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtNomeImmagine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textSize="14dp"
        android:textColor="@color/Nero" />
</LinearLayout>