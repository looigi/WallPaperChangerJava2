<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bianco_trasparente"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layContenitore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ListView
            android:id="@+id/lstFolders"
            android:divider="#CCCCCC"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ListView
            android:id="@+id/lstFiles"
            android:divider="#CCCCCC"
            android:paddingTop="3dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgCaricamentoGoogleDrive"
        android:src="@drawable/loading"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/txtDettaglio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_below="@id/imgCaricamentoGoogleDrive"
        android:layout_centerInParent="true"
        android:textColor="@color/Verde_Scuro"
        android:shadowColor="@color/black"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp" />"
</RelativeLayout>
