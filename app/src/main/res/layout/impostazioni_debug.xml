<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layImpostazioniDebug"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/bordato_non_trasparente"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/Rosso"
                android:text="Impostazioni DEBUG"
                android:layout_height="wrap_content">

            </TextView>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDebug"
                android:layout_width="match_parent"
                android:textColor="#0000CC"
                android:text="Attiva Debug"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchControllo"
                android:layout_width="match_parent"
                android:textColor="#0000CC"
                android:text="Controlla nuova versione all'avvio"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:padding="5dp"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:text="Invia file di log"
                    android:layout_height="match_parent">

                </TextView>

                <Button
                    android:id="@+id/btnInviaLog"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="..."
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:padding="5dp"
                android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:text="Pulisce file di log"
                    android:layout_height="match_parent">

                </TextView>

                <Button
                    android:id="@+id/btnPulisceLog"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="..."
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>