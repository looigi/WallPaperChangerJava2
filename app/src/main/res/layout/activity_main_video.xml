<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:background="@color/Nero"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/laySettaggiVideo"
        android:background="@drawable/bordato"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="8"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/Nero"
                android:text="Categoria"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtFiltroCategoriaVideo"
                android:layout_width="0dp"
                android:textColor="@color/Blue"
                android:layout_weight="2"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnCategorie"
                android:layout_width="0dp"
                android:theme="@style/spinnerTheme"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgRefreshCategorieVideo"
                    android:src="@drawable/icona_refresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                </ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/Nero"
                android:text="Filtro"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtFiltroVideo"
                android:layout_width="0dp"
                android:textColor="@color/Blue"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="7"
            android:background="@drawable/bordato_non_trasparente"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtIdVideo"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/Blue"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txtCategoriaVideo"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:lines="1"
                android:textColor="@color/Blue"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txtTitoloVideo"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:lines="1"
                android:textColor="@color/Rosso"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Prossimo"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgCerca"
                        android:src="@drawable/icona_cerca"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Elimina"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/imgElimina"
                            android:src="@drawable/elimina"
                            android:layout_width="35dp"
                            android:layout_height="35dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Screenshot"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgScreenshot"
                        android:src="@drawable/screenshot"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="SS. Multiplo"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgScreenshotMultipliV"
                        android:src="@drawable/screenshot_multipli"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Sposta Cat."
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgSpostaACategoria"
                        android:src="@drawable/sposta"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Settings"
                        android:textColor="@color/Nero"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgSettingsVideo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/settings" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/laySettaggiVideo"
        android:layout_height="match_parent"
        android:gravity="center">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laySposta"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_centerInParent="true"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="Sposta a categoria"
            android:textColor="@color/Rosso"
            android:textSize="16sp"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Filtro"
                android:textColor="@color/Nero"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtSpostaFiltroCategoria"
                android:layout_width="0dp"
                android:textColor="@color/Blue"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/Nero"
                android:text="Categoria"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnSpostaCategorie"
                android:layout_width="0dp"
                android:theme="@style/spinnerTheme"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgSpostaImmagine"
                    android:src="@drawable/icona_salva"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgAnnullaSposta"
                    android:src="@drawable/elimina_quadrato"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtAvanzamentoThumbs"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/pbVideoLoading"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <ImageView
        android:id="@+id/imgLinguettaVideo"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/laySettaggiVideo"
        android:src="@drawable/linguetta1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_below="@+id/laySettaggiVideo"
        android:layout_above="@+id/layBarraTasti"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/imgScorri"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:progressTint="#00FFFFFF"
            android:background="#00000000"
            android:progressBackgroundTint="#00FFFFFF"
            android:thumbTint="#00FFFFFF"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBarraTasti"
        android:layout_width="match_parent"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_molto_trasp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitolo"
            android:gravity="center_horizontal"
            android:textColor="@color/Rosso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/imgScorri2"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/Blue"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="00:00"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtAvanzamento"
                android:gravity="center_horizontal"
                android:textColor="@color/Blue"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtMax"
                android:gravity="center_horizontal"
                android:textColor="@color/Blue"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgAvanti"
                    android:src="@drawable/avanti"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPlayPause"
                    android:src="@drawable/icona_suona"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <!-- <ImageView
                    android:id="@+id/imgRicarica"
                    android:src="@drawable/icona_cerca"
                    android:layout_width="50dp"
                    android:layout_height="50dp" /> -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>