<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layDettaglio"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtData"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:gravity="center_horizontal"
        android:textColor="@color/Rosso"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layTesta"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:layout_below="@+id/edtData"
        android:layout_width="match_parent"
        android:weightSum="13"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCasa"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icona_salva" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCasa"
            android:gravity="center_horizontal"
            android:textColor="@color/Blue"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtRisultato"
            android:gravity="center_horizontal"
            android:textColor="@color/Rosso"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtFuori"
            android:gravity="center_horizontal"
            android:textColor="@color/Blue"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFuori"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icona_salva" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSalvaDettaglio"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icona_salva" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewPrincipale"
        android:layout_marginTop="2dp"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:layout_below="@+id/layTesta"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </ScrollView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgCaricamentoLazio"
        android:src="@drawable/loading"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </pl.droidsonroids.gif.GifImageView>
</RelativeLayout>