<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layTesta"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:weightSum="14"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:text="Anno"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spnAnni"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNuovoAnno"
                    android:src="@drawable/icona_aggiunge"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgRefreshAnno"
                    android:src="@drawable/icona_refresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgCambiaAnno"
                    android:src="@drawable/icona_cerca"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:gravity="center_vertical"
            android:weightSum="14">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:lines="1"
                android:text="Competizione" />

            <Spinner
                android:id="@+id/spnCompetizione"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="7" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNuovaCompetizione"
                    android:src="@drawable/icona_aggiunge"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgRefreshCompetizione"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icona_refresh" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgCambiaCompetizione"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icona_cerca" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:weightSum="5"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgIndietroClassifica"
                    android:src="@drawable/indietro"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtGiornata"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:text="Giornata"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgAvantiClassifica"
                    android:src="@drawable/avanti"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layTesta"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Classifica"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgClassifica"
                        android:src="@drawable/classifica"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Marcatori"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgMarcatori"
                        android:src="@drawable/marcatori"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Calendario"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgCalendario"
                        android:src="@drawable/calendario"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Squadre"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgSquadre"
                        android:src="@drawable/squadre"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Giocatori"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgGiocatori"
                        android:src="@drawable/giocatori"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Allenatori"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgAllenatori"
                        android:src="@drawable/allenatori"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Mercato"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgMercato"
                        android:src="@drawable/mercato"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Fonti"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgFonti"
                        android:src="@drawable/fonte"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Stati"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgStati"
                        android:src="@drawable/stato"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bordato_non_trasparente"
                    android:padding="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ruoli"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgRuoli"
                        android:src="@drawable/ruoli"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layClassifica"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/optTotale"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Totale"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/optCasa"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Casa"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/optFuori"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Fuori"
                        android:layout_height="wrap_content" />
                </RadioGroup>

                <!-- Barra titoli griglia -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="11"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Pt."
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Squadra"
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="G."
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="V."
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="N."
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="P."
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="GF"
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="GS"
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="MI"
                        android:textColor="@color/Rosso"
                        android:textSize="18sp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lstClassifica"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layCalendario"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lstCalendario"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laySquadre"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lstSquadre"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layMarcatori"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lstMarcatori"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layGiocatori"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:weightSum="5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Squadra" />

                    <Spinner
                        android:id="@+id/spnSquadreGioc"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="50dp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lstGiocatori"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layRuoli"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lstRuoli"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layAllenatori"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:weightSum="5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Squadra" />

                    <Spinner
                        android:id="@+id/spnSquadreAll"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="50dp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lstAllenatori"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layFonti"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lstFonti"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layStati"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lstStati"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layMercato"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/optAcquisti"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Acquisti"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/optCessioni"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Cessioni"
                        android:layout_height="wrap_content" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_non_trasp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/optInvernale"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Invernale"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/optEstivo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Estivo"
                        android:layout_height="wrap_content" />
                </RadioGroup>

                <ListView
                    android:id="@+id/lstMercato"
                    android:divider="#CCCCCC"
                    android:dividerHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgNuovo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icona_aggiunge" />

    <include
        layout="@layout/lazio_modifiche"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgCaricamentoLazio"
        android:src="@drawable/loading"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </pl.droidsonroids.gif.GifImageView>
</RelativeLayout>
