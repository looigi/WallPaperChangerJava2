            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Metri GPS" />

                <EditText
                    android:id="@+id/edtMetriGPS"
                    android:layout_width="0dp"
