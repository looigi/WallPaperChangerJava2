                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSalvaDTM"
                        android:layout_width="50dp"
