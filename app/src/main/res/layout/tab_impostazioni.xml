            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sAccuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Considera Accuracy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Accuracy" />

                <EditText
                    android:id="@+id/edtAccuracy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSalvaACC"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icona_salva" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Dim. Thumbs Salvate" />

                <EditText
                    android:id="@+id/edtDimThumbs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSalvaDT"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icona_salva" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
